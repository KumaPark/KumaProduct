<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:weightSum="160"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_weight="158"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="1"
            android:textSize="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22a6a6a6" />
        <TextView
            android:id="@+id/tv_office_cnt"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:background="#8BBDFF"
            android:text="1"
            android:textSize="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22a6a6a6" />
        <TextView
            android:id="@+id/tv_invalb_cnt"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:background="#FF9595"
            android:text="2"
            android:textSize="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22a6a6a6" />
        <TextView
            android:id="@+id/tv_move_cnt"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:background="#FFFF8F"
            android:text="3"
            android:textSize="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22a6a6a6" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#22a6a6a6" />

</LinearLayout>
