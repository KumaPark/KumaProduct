<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FAF4C0"
                app:layout_collapseMode="parallax"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFE08C"
                    >
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="menu"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="13dp"/>
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="홍길동"
                        android:textSize="13dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                    android:gravity="center"
                >
                    <Button
                        android:id="@+id/btn_equipment_move"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:text="장비/반출입"
                        android:textSize="13dp"
                        android:layout_gravity="center"/>
                    <Button
                        android:id="@+id/btn_equipment"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/btn_equipment_move"
                        android:text="장비현황"
                        android:textSize="13dp"
                        android:layout_gravity="center" />
                    <Button
                        android:id="@+id/btn_employ"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/btn_equipment"
                        android:text="예비"
                        android:textSize="13dp"
                        android:layout_gravity="center"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/btn_regi"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:text="등록"
                        android:textSize="13dp"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/btn_preliminary_1"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/btn_regi"
                        android:text="예비1"
                        android:textSize="13dp"
                        android:layout_gravity="center" />
                    <Button
                        android:id="@+id/btn_preliminary_2"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/btn_preliminary_1"
                        android:text="예비2"
                        android:textSize="13dp"
                        android:layout_gravity="center"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
                <RelativeLayout
                    android:id="@+id/rl_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFE08C"
                    app:layout_collapseMode="pin"
                    app:contentInsetStart="0dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    >
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="menu"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="13dp"/>
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="홍길동"
                        android:textSize="13dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"/>
                </RelativeLayout>
                </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1080"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="539"
                android:layout_height="match_parent"
                android:background="#FF9436"
                android:text="장비 현황"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="13dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#dddddd"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="539"
                android:layout_height="match_parent"
                android:text="임상 현황"
                android:background="#aaFF9436"
                android:textSize="13dp"
                android:layout_centerInParent="true"
                android:gravity="center"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="end|bottom"
        app:borderWidth="0dp"
        android:visibility="gone"
        app:backgroundTint="@color/fabPrimary"
        android:src="@android:drawable/ic_menu_camera" />
    <!--app:layout_anchor="@+id/collapsingToolbarLayout01"-->
    <!--app:layout_anchorGravity="bottom|right|end"-->

</android.support.design.widget.CoordinatorLayout>