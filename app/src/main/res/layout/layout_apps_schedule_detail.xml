<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back_input"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="사원명   : "
                android:textSize="15dp"
                android:gravity="center_vertical|right"
                />
            <RelativeLayout
                android:id="@+id/rl_reciver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back_input_disable"
                >
                <TextView
                    android:id="@+id/tv_reciver"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/rl_reciver_arrow"
                    android:gravity="center_vertical"
                    android:textColor="#222222"
                    android:textSize="14dp"
                    />
                <RelativeLayout
                    android:id="@+id/rl_reciver_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/back_input"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/down_arow"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#aae1e1e1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="구분  : "
                android:textSize="15dp"
                android:gravity="center_vertical|right"
                />
            <LinearLayout
                android:id="@+id/ll_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_state_sel"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:gravity="center"

                >
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="데모"
                    android:textSize="12dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:tag="D"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_state_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_state_non_sel"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:gravity="center"

                >
                <TextView
                    android:id="@+id/tv_state_1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="AS"
                    android:textSize="12dp"
                    android:textColor="#222222"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:tag="A"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_state_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_state_non_sel"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:gravity="center"

                >
                <TextView
                    android:id="@+id/tv_state_2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="회사"
                    android:textColor="#222222"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:tag="O"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_state_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_state_non_sel"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:gravity="center"

                >
                <TextView
                    android:id="@+id/tv_state_3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="기타"
                    android:textColor="#222222"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:tag="E"
                    />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#aae1e1e1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="시작일  : "
                android:textSize="15dp"
                android:gravity="center_vertical|right"
                />
            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="#222222"
                android:textSize="14dp"
                android:background="@drawable/back_input_disable"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/calendar_1"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#aae1e1e1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="종료일  : "
                android:textSize="15dp"
                android:gravity="center_vertical|right"
                />
            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="#222222"
                android:background="@drawable/back_input_disable"
                android:textSize="14dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/calendar_1"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#aae1e1e1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="일정명  : "
                android:textSize="15dp"
                android:gravity="center_vertical|right"
                />
            <RelativeLayout
                android:id="@+id/rl_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back_input_disable"
                >
                <TextView
                    android:id="@+id/tv_destination"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/rl_destination_arrow"
                    android:gravity="center_vertical"
                    android:textColor="#222222"
                    android:textSize="14dp"
                    />
                <RelativeLayout
                    android:id="@+id/rl_destination_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/back_input"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/down_arow"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#aae1e1e1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="발송인  : "
                android:textSize="15dp"
                android:gravity="center_vertical|right"
                />
            <EditText
                android:id="@+id/ev_deliver"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:hint="모세현"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="비고  : "
                    android:textSize="15dp"
                    android:gravity="center_vertical|right"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/ev_etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:maxLines="20"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:background="@drawable/back_input_disable"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_dlg_yes_no"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="320"
            >
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="150"
                android:background="@xml/sel_dlg_confirm"
                android:text="@string/str_dlg_confirm"
                android:textColor="@color/color_white"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
